//https://www.spoj.com/problems/ONP/

#include<bits/stdc++.h>
#define fr(i,c,b) for(int i=c;i<b;i++)
#define si(x) int x; scanf("%d", &x)
#define sll(x) ll x; scanf("%lld", &x)
#define pi(x) printf("%d", x)
#define pll(x) printf("%lld", x)
#define nl printf("\n")
#define watch(x) cout << (#x) << " is " << (x) << endl

typedef long long int ll;

using namespace std;

int weight(char ch)
{
    int w=0;
    if(ch=='+'||ch=='-')
        return 1;
    else
        return 2;
}

bool high(char a,char b)
{
    int op1=weight(a);
    int op2=weight(b);
    if(op1>=op2)
        return true;
    else
        return false;
}

int main()
{
    si(t);
    while(t--)
    {
        string s;
        cin>>s;
        string res;
        stack<char> st;
        fr(i,0,s.length())
        {
            if(s[i]>='a'&&s[i]<='z')
                res+=s[i];
            else if(s[i]=='(')
                st.push(s[i]);
            else if(s[i]==')')
            {
                while(!st.empty()&&st.top()!='(')
                {
                    res+=st.top();
                    st.pop();
                }
                st.pop();

            }
            else
            {
                while(!st.empty()&&st.top()!='('&&high(s[i],st.top()))
                {
                    res+=st.top();
                    st.pop();
                }
                st.push(s[i]);
            }
        }
        while(!st.empty())
        {
            res+=st.top();
            st.pop();
        }
        cout<<res<<endl;
    }
}
